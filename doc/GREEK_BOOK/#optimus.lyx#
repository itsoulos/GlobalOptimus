\begin_layout LyX-Code

\lang english
Procedure Genetic
\end_layout

\begin_layout LyX-Code

\lang english
   t=0
\end_layout

\begin_layout LyX-Code

\lang english
   Initialize ( P(t) )
\end_layout

\begin_layout LyX-Code

\lang english
   Evaluate ( P(t) )
\end_layout

\begin_layout LyX-Code

\lang english
   while (not terminated (P(t)) )do
\end_layout

\begin_layout LyX-Code

\lang english
     t=t+1
\end_layout

\begin_layout LyX-Code

\lang english
     subP(t)=Select( P(t) )
\end_layout

\begin_layout LyX-Code

\lang english
     Crossover( subP(t) )
\end_layout

\begin_layout LyX-Code

\lang english
     Mutate ( subP(t) )
\end_layout

\begin_layout LyX-Code

\lang english
     P(t+1) = Recombine (P(t),
 subP(t))
\end_layout

\begin_layout LyX-Code

\lang english
   end while
\end_layout

\begin_layout LyX-Code

\end_layout

\begin_layout LyX-Code

\lang english
End Genetic
\end_layout

\end_inset


\end_layout

